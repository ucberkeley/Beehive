- content_for :title, @user.name
.container
  .card
    .row
      %h1= "#{@user.name} - #{@user.user_type_string}"

      %dl.dl-horizontal
        %dt Email
        %dd
          = @user.email

        %dt Courses Taken
        %dd
          - @user.courses.each do |course|
            %span.tags.course-tag= course.name
        %dt Interests
        %dd
          - @user.categories.each do |category|
            = category.name

        %dt Proficient Languages
        %dd
          - @user.proglangs.each do |lang|
            %span.tags.lang-tag= lang.name

        %dt Class of
        %dd

        %dt Units this semester
        %dd
          = @user.units

        %dt Hours free
        %dd
          = @user.free_hours

        %dt Free in the summer
        %dd
          = @user.summer ? "Yes" : "No"

        %dt Research
        %dd
          = @user.research_blurb

        %dt Previous Experience
        %dd
          = @user.experience

        %dt Link to Resume
        %dd
          - if @user.url.present?
            =link_to url_with_protocol(@user.url), url_with_protocol(@user.url)
