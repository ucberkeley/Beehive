.applic-info
  %dl.dl-horizontal
    %dt Full Name
    %dd
      = user.name
    %dt Major 
    %dd
      = user.major_code
    %dt Email
    %dd
      = user.email

    
    - y = ['Senior', 'Junior', 'Sophomore', 'Freshman']
    - year = Time.now.year
    - if Time.now.month >= 6

      - if (user.class_of.to_i - year.to_i) <= 0 || (user.class_of.to_i - year.to_i) > 4
        %dt Class Of
        %dd
          = user.class_of
      - else
        %dt Year
        %dd
          = y[user.class_of.to_i - year.to_i - 1]
    - else
      - if (user.class_of.to_i - year.to_i) < 0 || (user.class_of.to_i - year.to_i) > 3
        %dt Class Of
        %dd
          = user.class_of
      - else
        %dt Year
        %dd
          = y[user.class_of.to_i - year.to_i]
      
      
      / = user.year

    / %dt Units
    / %dd
    /   = user.units

    %dt Hours per Week
    %dd
      = user.free_hours

    %dt Summer
    %dd
      - if user.summer
        Available
      - else
        Not Available

    / %dt Motivation
    / %dd
    /   = user.research_blurb

    %dt Courses Taken
    %dd
      - user.courses.each do |course|
        %span.tags.course-tag= course.name
          
    %dt Interests
    %dd
      - user.categories.each do |category|
        = category.name

    %dt Proficient Languages
    %dd
      - user.proglangs.each do |lang|
        %span.tags.lang-tag= lang.name
    %dt Experience
    %dd
      = user.experience

    %dt Resume Link
    %dd
      - if user.url.present?
        = link_to user.url, user.url