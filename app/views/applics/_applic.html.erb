<% job = applic.job -%>
<% if job!=nil -%>
<tr class="job_<%= cycle('even', 'odd') %>">
  <td>
    <% if mine -%>
      <%= applic.updated_at.strftime('%B %d, %Y') %>
    <% else -%>
      <%= link_to applic.updated_at.strftime('%B %d, %Y'), applic_path(applic) -%>
    <% end %>
  </td>
  <td><%= link_to job.title, job_path(job) %></td>
  <td>
    <% if mine -%>
      <%= job.user.nil? ? 'None' + (applic.unread? ? '[updated]' : '') : link_to(job.contacter.name, user_path(job.primary_contact_id)) %>
    <% else -%>
      <%= link_to applic.user.name, user_path(applic.user) %>
    <% end %>
  </td>
  <td>
  <% if mine && !applic.applied -%>
    <% if job.open? -%>
    <%= link_to "Incomplete [Continue]", new_job_applic_path(job) %>
    <% else -%>
    Incomplete, Closed
    <% end -%>
  <% elsif applic.status -%>
    <%= applic.status.capitalize -%>
  <% else -%><!-- TODO:add read -->
    Undecided
  <% end %>
  </td>
  <% if !mine -%>
    <td>
      
      <%= link_to 'delete', delete_applic_path(applic), class: "btn btn-danger" -%>
      
    </td>
  <% end -%>


</tr>
<% end -%>