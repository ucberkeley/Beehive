<%= render :partial => "dashboard/menu_bar" %>

<h1>Listing jobs</h1>
<%= stylesheet_link_tag "job" %>
<br>

<div id="browse_search_bar">
	<% form_for :search_terms, :url => {:controller => :jobs, :action => :list} do |f| %>
		<%= f.text_field :query, {:onfocus=>"textChange('search_terms_query', '" + @search_query + "');", :onblur=>"textChange('search_terms_query', '" + @search_query + "');", :value => @search_query} %>
		<%= f.select :department_select, [["All Departments",0]] + Department.all.collect {|c| [c.name, c.id]}, {:selected => @department} %>
		<%= f.select :faculty_select, [["All Faculty",0]] + Faculty.all.collect {|c| [c.name, c.id]} %>
		Paid? <%= f.check_box :paid, {:value => @department}%>
		Credit? <%= f.check_box :credit %>
		<%= f.submit "Filter Results" %>
	<% end %>
</div>

<br>

<div id="browse_results">
  <div id="browse_header">
	<div class="job_padding_wrapper">
	<table id="browse_header_table">
	<tr>
		
		<td class="job_table_left">Title/Description</td>
		<td class="job_credit">Paid?</td>
		<td class="job_credit">Credit?</td>
		<td class="job_extra"></td>
		</div>
	</tr>
	</table>
	</div>
  </div>
  <%= render :partial => "job", :collection => @jobs %>
</div>
